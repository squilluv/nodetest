&НаСервере
Процедура Команда1НаСервере() 
	ЗаписьJSON = Новый ЗаписьJSON; 
	ЗаписьJSON.ПроверятьСтруктуру = Ложь; 
	ПараметрыЗаписиJSON = Новый ПараметрыЗаписиJSON( , Символы.Таб) ; 
	ЗаписьJSON.ОткрытьФайл("C:\MyLittleTemp\1.json", , , ПараметрыЗаписиJSON);
	ПараметрыЗаписиJSON = Новый ПараметрыЗаписиJSON( , Символы.Таб); 
	СоединениеFTP = ПодключниеКFTP();
	Запрос = Новый Запрос;
	Запрос.Текст = "ВЫБРАТЬ
	                 |	Авто.Наименование КАК Наименование,
	                 |	Авто.Код КАК Код,
	                 |	Авто.Серия КАК Серия
	                 |ИЗ
	                 |	Справочник.Авто КАК Авто";
	рез = Запрос.Выполнить().Выбрать();

	ЗаписьJSON.ЗаписатьНачалоМассива();
	Пока Рез.Следующий() Цикл
		ЗаписьJSON.ЗаписатьНачалоОбъекта();	
		ЗаписьJSON.ЗаписатьИмяСвойства("id");
		ЗаписьJSON.ЗаписатьЗначение(рез.Код);            
		ЗаписьJSON.ЗаписатьИмяСвойства("name");
		ЗаписьJSON.ЗаписатьЗначение(рез.Наименование);
		ЗаписьJSON.ЗаписатьИмяСвойства("seia");
		ЗаписьJSON.ЗаписатьЗначение(рез.Серия);
		ЗаписьJSON.ЗаписатьКонецОбъекта();
	КОнецЦикла;
	ЗаписьJSON.ЗаписатьКонецМассива();
	ЗаписьJSON.Закрыть();
	СоединениеFTP.Записать("C:\MyLittleTemp\1.json", "/public_html/" + "1" + ".json");
	ЗаписьJSON.Закрыть();
КонецПроцедуры

Функция ПодключниеКFTP() Экспорт
	АдресСайта = "vh258.timeweb.ru";
	Логин = "cr92971";
	Пароль = "sR1ZNUiVRbfk";
	FTPСоединение = Новый FTPСоединение(АдресСайта, , Логин, Пароль);
	Возврат FTPСоединение;
КонецФункции


&НаКлиенте
Процедура Команда1(Команда)
	Команда1НаСервере();
КонецПроцедуры

&НаСервере
Процедура Команда2НаСервере()
	ЧтениеJSON = Новый ЧтениеJSON(); 
	ЧтениеJSON.ОткрытьФайл("C:\MyLittleTemp\1.json"); 
	Авто = ПрочитатьJSON(ЧтениеJSON); 
	ЧтениеJSON.Закрыть();
	Для каждого а из авто Цикл
		ля = Справочники.Авто.СоздатьЭлемент();
		ля.Код = а.id;
		ля.Наименование = а.name;
		ля.Серия = а.seia;
		Попытка 
			ля.Записать();
		Исключение
			ля.Заблокировать();
		КОнецпопытки
	КонецЦикла;
КонецПроцедуры


